{
  "name": "yepagi",
  "private": true,
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "turbo dev",
    "lint:deps": "npx check-dependency-version-consistency .",
    "lint:deps:fix": "npx check-dependency-version-consistency . --fix",
    "commit": "cz"
  },
  "workspaces": [
    "configs/*",
    "packages/*",
    "storybooks/*",
    "tests/*",
    "apps/*"
  ],
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
